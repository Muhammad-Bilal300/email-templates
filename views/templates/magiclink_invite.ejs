          Oxygen, Ubuntu, Cantarell, sans-serif;
        background: rgb(37, 37, 37);
        min-height: 100vh;
        padding: 20px;
      }
      .email-container {
        max-width: 600px;
        margin: 0 auto;
        /* background: #151515; */
        background: url("/uploads/images/email-templates-bg.png") no-repeat;
        background-size: cover;
        padding: 50px;
        position: relative;
      }
      .header {
        text-align: center;
        margin-bottom: 40px;
      }

