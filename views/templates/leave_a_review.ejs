    <title>Leave a Review</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          Oxygen, Ubuntu, Cantarell, sans-serif;
        background: rgb(37, 37, 37);
        min-height: 100vh;
        padding: 20px;
      }

      .email-container {
        max-width: 600px;
        margin: 0 auto;
        /* background: #151515; */
        background: url("/uploads/images/email-templates-bg.png") no-repeat;
        background-size: 100%;
        padding: 50px;
        position: relative;
      }

      .header {
        text-align: center;
        margin-bottom: 50px;
      }

      .logo-icon {
        width: 24px;
        height: 24px;
        background: #8b5cf6;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 12px;
        font-weight: bold;
      }

      .header h1 {
        color: white;
        font-size: 40px;
        font-weight: 600;
        margin-bottom: 15px;
        margin-top: 10px;
      }

      .header p:nth-last-of-type(2) {
        color: #fff;
        font-size: 16px;
        font-weight: 500;
      }
      .header p {
        color: #ffffff;
        font-size: 16;
        font-weight: 500;
        margin-top: 10px;
        max-width: 470px;
        margin-left: auto;
        margin-right: auto;
      }

      .purchase-summary {
        padding: 16px;
        border-radius: 20px;
        margin-top: -60px;
      }

      .detail-row:last-child {
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: none;
      }

      .detail-row {
        display: table;
        width: 100%;
        /* border-top: 0.42px solid #ffffff24; */
        /* border-bottom: 0.42px solid #ffffff24; */
        padding-top: 15px;
      }

      .detail-label {
        color: white;
        font-size: 16px;
        font-weight: 400;
        width: 100%;
        align-content: center;
        align-items: center;
      }

      .detail-value {
        color: white;
        font-size: 16px;
        font-weight: 600;
      }

      .total-row .detail-value {
        font-size: 18px;
        font-weight: 700;
      }

      .brand-text {
        color: #6366f1;
        font-size: 16px;
        font-weight: 700;
      }

      .footer {
        text-align: center;
        color: rgba(255, 255, 255, 0.6);
        font-size: 14px;
        margin: auto;
        margin-top: 50px;
        padding: 20px;
        border-top: 0.42px solid #ffffff24;
      }
      .logo {
        background-image: url(https://files.tfgsolutions.pk/public/uploads/emails/invader%20shop-03.png);
        width: 120px;
        height: 40px;
        margin: 0 auto;
      }

      @media (max-width: 480px) {
        .email-container {
          max-width: 100%;
          margin: 0;
        }

        .order-summary,
        .order-details,
        .thank-you-card {
          padding: 16px;
        }

        .header h1 {
          font-size: 28px;
        }
      }
    </style>
